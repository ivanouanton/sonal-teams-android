<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background.WhitePattern.Padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.home.HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="320"
        android:visibility="gone"
        android:layout_height="wrap_content"/>


    <!--START PROFILE-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:background="@color/aqua"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ImageView.Round"
        tools:src="@drawable/ic_user_test" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_profile_image_initials"
        style="@style/BaseText.Heading2.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_profile_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_profile_image"
        app:layout_constraintStart_toStartOf="@+id/iv_profile_image"
        app:layout_constraintTop_toTopOf="@+id/iv_profile_image"
        tools:text="WN" />
    <!--END PROFILE-->


    <!--START USERNAME-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_label_welcome"
        style="@style/BaseText.Heading2.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_4dp"
        android:textSize="24sp"
        android:text="@string/welcome"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_image"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_username"
        style="@style/BaseText.Heading.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:autoSizeTextType="uniform"
        android:textSize="28sp"
        android:maxLines="1"
        android:text=""
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_welcome"
        tools:text="Mina Abdelmalek"
        tools:visibility="gone" />
    <!--END USERNAME-->


    <!--START DEVICE-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:visibility="visible"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_32dp"
                android:layout_weight="1"
                android:src="@drawable/img_device_sonal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_session"
                style="@style/RoundedButton.Aqua.BlackText"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:text="@string/pair_device" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <!--END DEVICE-->


    <!--START NOT ACTIVE-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_protocol_not_active"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_warning"
            app:layout_constraintBottom_toTopOf="@+id/tv_label_account_active_status"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_account_active_status"
            style="@style/BaseText.Heading2.Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:gravity="start"
            android:text="@string/protocol_not_active"
            android:textSize="@dimen/text_size_huge_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_notify_email"
            style="@style/BaseText.Heading2.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/notify_by_email"
            android:textSize="@dimen/text_size_huge_40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_account_active_status"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_account_active_info"
            style="@style/BaseText.Subtitle.GrayDimDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:text="@string/visit_sonal_website"
            android:textSize="@dimen/text_size_standard_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_notify_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--END NOT ACTIVE-->


    <!--START NEXT PROTOCOL-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_next_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginVertical="@dimen/margin_10dp"
        android:visibility="invisible"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_12dp"
            android:paddingVertical="@dimen/padding_14dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_schedule_large" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_next_session"
                style="@style/BaseText.Subtitle.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/padding_12dp"
                android:textSize="@dimen/text_size_standard"
                android:textStyle="bold"
                tools:text="Next Session" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_next_session_date"
                style="@style/BaseText.Subtitle.Black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_standard"
                tools:text="Oct 29 @ 3:30pm" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <!--END NEXT PROTOCOL-->


    <!--START BUBBLE ERROR-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_bubble_error"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow_dim"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_12dp"
            android:paddingVertical="1dp">

            <ImageView
                android:id="@+id/iv_bubble_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_no_connection" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_bubble_error_text"
                style="@style/BaseText.Subtitle.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_12dp"
                android:textStyle="bold"
                tools:text="Re-connect to internet" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <!--END BUBBLE ERROR-->


    <!--START SPIN KIT-->
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Small.Wave"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginVertical="10dp"
        android:visibility="visible"
        app:SpinKit_Color="@color/aqua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--END SPIN KIT-->

</androidx.constraintlayout.widget.ConstraintLayout>