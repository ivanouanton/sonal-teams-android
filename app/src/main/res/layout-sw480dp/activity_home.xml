<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.HomeActivity"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fr_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/fr_device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/fr_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            style="@style/BottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="unlabeled"
            app:itemBackground="@drawable/bg_bottom_navigation"
            app:itemIconTint="@drawable/bottom_navigation_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/navigation_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/right_navigation_drawer"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_pattern_white"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_32dp"
                android:layout_marginTop="@dimen/margin_32dp"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_32dp"
                android:src="@drawable/ic_setting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_logo" />

            <LinearLayout
                android:id="@+id/ll_container_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_56dp"
                android:layout_marginTop="@dimen/margin_64dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_account_large" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/BaseText.Subtitle.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:text="@string/account"
                    android:textSize="@dimen/text_size_standard_max"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_container_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="@+id/ll_container_account"
                app:layout_constraintTop_toBottomOf="@+id/ll_container_account">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bluetooth_gray" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/BaseText.Subtitle.Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:text="@string/device"
                    android:textSize="@dimen/text_size_standard_max"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_container_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24dp"
                android:gravity="center_vertical"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/ll_container_account"
                app:layout_constraintTop_toBottomOf="@+id/ll_container_device">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_history_large" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:text="@string/history" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_container_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24dp"
                android:gravity="center_vertical"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/ll_container_history"
                app:layout_constraintTop_toBottomOf="@+id/ll_container_history">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_schedule_large" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:text="@string/schedule" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_56dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:text="@string/faq"
                app:layout_constraintBottom_toTopOf="@+id/tv_support"
                app:layout_constraintStart_toStartOf="@+id/tv_support" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:text="@string/support"
                app:layout_constraintBottom_toTopOf="@+id/tv_terms_of_use"
                app:layout_constraintStart_toStartOf="@+id/tv_terms_of_use" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_terms_of_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:text="@string/terms_of_use"
                app:layout_constraintBottom_toTopOf="@+id/tv_privacy_policy"
                app:layout_constraintStart_toStartOf="@+id/tv_privacy_policy" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:text="@string/privacy_policy"
                app:layout_constraintBottom_toTopOf="@+id/tv_contact_us"
                app:layout_constraintStart_toStartOf="@+id/tv_contact_us" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:text="@string/contact_us"
                app:layout_constraintBottom_toTopOf="@+id/tv_logout"
                app:layout_constraintStart_toStartOf="@+id/tv_logout" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_10dp"
                android:text="@string/log_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ll_container_schedule" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>