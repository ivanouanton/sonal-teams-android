    <style name="BaseText.Heading2" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="BaseText.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="BaseText.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="BaseText.SemiBold" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="BaseText.Bold" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="BaseText.Caption.Bold" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="BaseText.Heading.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseText.Heading2.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseText.Subtitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseText.Caption.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseText.Caption.Yellow">
        <item name="android:textColor">@color/yellow_dim</item>
    </style>

    <style name="BaseText.Heading.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Heading2.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Subtitle.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.SemiBold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Subtitle.GrayDimDark">
        <item name="android:textColor">@color/gray_dim_dark</item>
    </style>

    <style name="BaseText.Subtitle.Aqua">
        <item name="android:textColor">@color/aqua</item>
    </style>

    <style name="BaseText.Subtitle.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="BaseText.Caption.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Caption.Black.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseText.Caption.Black.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText.Caption.Gray">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="BaseText.Caption.Gray.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText.Caption.DarkGray">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="BaseText.Caption.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="BaseText.Caption.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SmallTextRegular.Black" parent="BaseText.Caption">
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="SmallTextRegular.Aqua" parent="BaseText.Caption">
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="SmallTextBold" parent="BaseText.Caption.Bold">
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="SmallTextBold.Aqua" parent="SmallTextBold">
        <item name="android:textColor">@color/aqua</item>
    </style>

    <style name="SmallTextBold.Black" parent="SmallTextBold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.SemiBold.Black.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseText.Bold.Black.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText.Bold.Black.16">
        <item name="android:textSize">@dimen/text_size_standard_16</item>
    </style>

    <!--END TEXTVIEW STYLE-->

    <!--START EDITTEXT STYLE-->
    <style name="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseEditText.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundShapeAppearance.Small</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="BaseEditText.Outline.White">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="BaseEditText.Outline.Black">
        <item name="boxStrokeColor">@android:color/black</item>
    </style>

    <style name="RoundShapeAppearance.Small">
        <item name="cornerSize">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!--END EDITTEXT STYLE-->

    <!--START CHECKBOX STYLE-->
    <style name="CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/white</item>
    </style>
    <!--END CHECKBOX STYLE-->

    <!--START IMAGEVIEW STYLE-->
    <style name="ImageView.Round" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <!--END IMAGEVIEW STYLE-->
    <color name="red">#FF1100</color>
</resources>
