<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    <style name="Theme.WaveNeuroAndroid" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="Theme.WaveNeuroAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>

        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/slide_top</item>
        <item name="android:windowExitTransition">@transition/slide_top</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.SnackbarText</item>

    </style>

    <style name="Background.WhitePattern" parent="">
        <item name="background">@color/gray_15</item>
        <item name="android:background">@color/gray_15</item>
    </style>
    <style name="Background.WhitePattern.Padding">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>
    <style name="Background.WhitePattern.Padding.Home">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!--START BUTTON STYLE-->
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="shapeAppearance">@style/RoundShapeAppearance</item>
    </style>

    <style name="RoundedButton.Aqua">
        <!--        <item name="android:textColor">@color/white</item>-->
        <item name="materialThemeOverlay">@style/AquaButtonThemeOverlay</item>
    </style>

    <style name="RoundedButton.Aqua.BlackText">
        <item name="materialThemeOverlay">@style/AquaButtonThemeOverlayBlack</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundedButton.Aqua.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AquaButtonThemeOverlay">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/aqua</item>
    </style>

    <style name="AquaButtonThemeOverlayBlack">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/aqua</item>
    </style>

    <style name="RoundShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <!--END BUTTON STYLE-->

    <!--START TEXTVIEW STYLE-->
    <style name="BaseText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

